#!/bin/bash

#=============================================
# Version : 1.0
# Author  : Closebox73
# Desc    : Display current WiFi SSID.
#           Use '-i' flag to include icon.
#=============================================

SSID_NAME=$(/sbin/iwgetid -r)

if [[ -n "$SSID_NAME" ]]; then
	if [[ "$1" == "-i" ]]; then
		echo "ï‡«  $SSID_NAME"
	else
		echo "$SSID_NAME"
	fi
else
	echo "Not connected"
fi

exit 0
